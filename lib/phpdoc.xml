<?xml version="1.0" encoding="UTF-8"?>
<phpdocumentor
    configVersion="3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://www.phpdoc.org"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/phpDocumentor/phpDocumentor/refs/heads/master/data/xsd/phpdoc.xsd"
>
    <paths>
        <output>doc/api</output>
        <cache>doc/.cache</cache>
    </paths>
    <version number="3.0.0">
        <folder>latest</folder>
        <api format="php">
            <source dsn=".">
                <path>cathedral/*/src</path>
                <path>inanepain/*/src</path>
            </source>
            <markers>
                <marker>TODO</marker>
                <marker>FIXME</marker>
                <marker>NOTE</marker>
                <marker>BUG</marker>
                <marker>HACK</marker>
            </markers>
        </api>
    </version>
</phpdocumentor>
